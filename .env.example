# WebRDP Configuration
# Copy this file to .env and modify as needed

# Server
LISTEN_IP=127.0.0.1
LISTEN_PORT=4200

# Session
SESSION_NAME=WebRDP
SESSION_SECRET=change-me-to-a-random-string

# RDP Defaults
RDP_DEFAULT_HOST=
RDP_DEFAULT_PORT=3389
RDP_READY_TIMEOUT=20000

# Logging
LOG_SCREEN_ON_MOUSECLICKS=false
LOG_KEYPRESS=false

# Header
HEADER_TEXT=
HEADER_BACKGROUND=green

# TLS (optional â€” leave blank for HTTP)
TLS_KEY_PATH=
TLS_CERT_PATH=
